<!DOCTYPE html>
<html>
  <head>
    <title>HtownBoxing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <%= link_to "H-Town Boxing", static_pages_home_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "About", static_pages_about_path, class: "nav-link" %>
        </li>
        <li class='nav-item'>
          <%= link_to "Classes", static_pages_classes_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "FAQ", static_pages_faq_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Staff", static_pages_staff_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    </nav>
    <%= yield %>

    <footer class='footer'>
      <div class="container">
        <p>blah</p>
      </div>
    </footer>
  </body>
</html>
